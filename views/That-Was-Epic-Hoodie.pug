extends base.pug

block scripts
    script(src='/index.js')

block style
    style 
        include ../static/style.css
        include ../static/styleProduct.css

block content 
    div.container
        div.box
            img(src="/static/img/thatwasepichoodie.png")
        div.content
            h1 That Was Epic Hoodie
            h6 Rs. 5,000.00
            form(action="/That-Was-Epic-Hoodie",method="post",class="myForm")
                input(type="hidden",class="myInput",name="proName",value="That-Was-Epic-Hoodie")
                input(type="hidden", class="myInput", name="proImage", value="../static/img/thatwasepichoodie.png")
                input(type="text",class="myInput",name="quantity",placeholder="qty" alt="1")
                input(type="hidden",class="myInput",name="size",value="Adult")
                input(type="hidden",class="myInput",name="price",value="5000")
                button(class="btn") Add to Cart
